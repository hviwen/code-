# ==============================================================================
# Package Manager Update & Cleanup Functions
# ==============================================================================

# Homebrew ä¸€é”®æ›´æ–°å’Œæ¸…ç†å‡½æ•°
brew-update() {
    echo "ğŸº Starting Homebrew update and cleanup..."
    echo "" 
    
    # æ£€æŸ¥ Homebrew æ˜¯å¦å·²å®‰è£…
    if ! command -v brew &> /dev/null; then
        echo "âŒ Homebrew is not installed!"
        return 1
    fi
    
    echo "ğŸ“¦ Updating Homebrew..."
    brew update
    
    echo "â¬†ï¸  Upgrading installed packages..."
    brew upgrade
    
    echo "ğŸ§¹ Cleaning up old versions and cache..."
    brew cleanup
    
    echo "ğŸ” Running doctor check..."
    brew doctor
    
    echo "ğŸ“Š Showing disk space saved..."
    echo "Cache location: $(brew --cache)"
    
    echo "âœ… Homebrew update and cleanup completed! ğŸ‰"
}

# MacPorts ä¸€é”®æ›´æ–°å’Œæ¸…ç†å‡½æ•°
port-update() {
    echo "ğŸš¢ Starting MacPorts update and cleanup..."
    echo ""
    
    # æ£€æŸ¥ MacPorts æ˜¯å¦å·²å®‰è£…
    if ! command -v port &> /dev/null; then
        echo "âŒ MacPorts is not installed!"
        return 1
    fi
    
    echo "ğŸ“¦ Updating MacPorts base and ports tree..."
    sudo port selfupdate
    
    echo "â¬†ï¸  Upgrading outdated ports..."
    sudo port upgrade outdated
    
    echo "ğŸ§¹ Cleaning inactive ports..."
    sudo port clean --all all
    
    echo "ğŸ—‘ï¸  Removing inactive ports..."
    sudo port uninstall inactive
    
    echo "ğŸ“Š Showing installed ports..."
    port installed requested
    
    echo "âœ… MacPorts update and cleanup completed! ğŸ‰"
}

# ç»¼åˆæ›´æ–°å‡½æ•°ï¼ˆåŒæ—¶æ›´æ–°ä¸¤ä¸ªåŒ…ç®¡ç†å™¨ï¼‰
update-all-packages() {
    echo "ğŸš€ Starting comprehensive package manager update..."
    echo "==========================================="
    
    # æ›´æ–° Homebrew
    if command -v brew &> /dev/null; then
        brew-update
        echo ""
    else
        echo "âš ï¸  Homebrew not found, skipping..."
    fi
    
    echo "==========================================="
    
    # æ›´æ–° MacPorts
    if command -v port &> /dev/null; then
        port-update
        echo ""
    else
        echo "âš ï¸  MacPorts not found, skipping..."
    fi
    
    echo "ğŸŠ All package managers updated successfully!"
}

# è®¾ç½®åˆ«å
alias bu='brew-update'          # Homebrew æ›´æ–°
alias pu='port-update'          # MacPorts æ›´æ–°  
alias ua='update-all-packages'  # å…¨éƒ¨æ›´æ–°


